<!DOCTYPE html>
<html>
  <head>
    <title>FoodShoppingApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
     <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom shadow-sm">
       <ul class="navbar-nav mr-auto">
         <li class="nav-item active">
           <%= link_to "Home", root_path, :class=>"nav-link", :class => "btn btn-light logo" %>
         </li>
         <li class="nav-item active">
           <%= link_to "All Foods", foods_path, :class=>"nav-link", :class => "btn btn-light" %>
         </li>
         <li class="nav-item active">
           <%= link_to "Categories", categories_path, :class=>"nav-link", :class => "btn btn-light" %>
         </li
         <li class="nav-item active">
           <%= link_to "Contact", pages_show_path, :class=>"nav-link", :class => "btn btn-light nav-contact" %>
         </li>

         <% if @current_user.present? %>
           <% if @current_user.admin? %>
           <li class="nav-item active">
             <%= link_to "All Users", users_path, :class=>"nav-link", :class => "btn btn-light" %>
           </li>
           <li class="nav-item active">
             <%= link_to "New Food", new_food_path, :class=>"nav-link", :class => "btn btn-light" %>
           </li>
           <li class="nav-item active">
             <%= link_to "New Category", new_category_path, :class=>"nav-link", :class => "btn btn-light" %>
           </li>
           <% end %>
           <li class="nav-item active">
             <%= link_to "Cart", cart_path(@current_cart), :class=>"nav-link", :class => "btn btn-light" %>
           </li>
           <li class="nav-item active">
             <%= link_to "All Orders", orders_path, :class=>"nav-link", :class => "btn btn-light" %>
           </li>

           <p class="welcome">Welcome back <%= @current_user.name %> !</p>
         <% else %>

         <% end %>

       </ul>
       <% if @current_user.present? %>
         <form class="form-inline my-2 my-lg-0">
           <%= link_to "Log out #{ @current_user.name }", login_path, :method => "delete", :class=>"btn btn-outline-success my-2 my-sm-0" %>
         </form>
       <% else %>
         <form class="form-inline my-2 my-lg-0">
           <%= link_to "Sign up", new_user_path, :class => "btn btn-outline-success my-2 my-sm-0" %>
           <%= link_to "Login", login_path, :class => "btn btn-outline-success my-2 my-sm-0" %>
         </form>
       <% end %>
     </nav>

    <%= yield %>

  </body>
</html>
