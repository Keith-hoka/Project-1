<%= form_for @food do |f| %>
<form>
  <div class="form-group" style="width: 18rem;">
    <label>Name</label>
    <%= f.text_field :name, :required => true, placeholder: "Enter food name", :class => "form-control" %>
  </div>
  <div class="form-group" style="width: 18rem;">
    <label>Image:</label>
    <%= f.url_field :image, :required => true, placeholder: "https://...", :class => "form-control" %>
  </div>
  <div class="form-group" style="width: 18rem;">
    <label>Price:</label>
    <%= f.text_field :price, :class => "form-control" %>
  </div>
  <div class="form-group" style="width: 18rem;">
    <label>Category:</label>
    <%= f.select :category_id, Category.pluck(:title, :id), :include_blank => true, :class => "form-control" %>
  </div>

  <%= f.submit nil, :class=>"btn btn-primary new-food-btn" %>
</form>
<% end %>
