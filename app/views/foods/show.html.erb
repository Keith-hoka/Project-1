
<div class="single-food">
  <h3 class=""><%= @food.name %></h3>

  <img src="<%= @food.image %>" alt="<%= @food.name %>" class="food_img img-thumbnail rounded mx-auto d-block">

  <p>Category: <%= link_to @food.category.title, @food.category if @food.category.present? %></p>
  <p>Price: $<%= @food.price %> <%= link_to "Add to Cart", line_items_path(:food_id => @food.id), :method => "post", class: "btn btn-primary buy-btn" %></p>

  <div>
    <% if @current_user.present? && @current_user.admin? %>
      <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to "Edit Food", edit_food_path(@food), class: "view-btn" %></button>
      <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to "Delete Food", @food, :method => "delete", :data => { :confirm => "Are you sure?" }, class: "view-btn" %></button>
    <% end %>
  </div>
</div>
