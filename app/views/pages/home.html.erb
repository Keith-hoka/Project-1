
<% if @current_user.present? %>
  <h1>Welcome back <%= @current_user.name %></h1>

  <%= form_for @current_user do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.submit %>
  <% end %>

<% end %>

<div class="row">
  <div class="col-md-3">
    left column
  </div>

  <div class="col-md-6">
    main section
  </div>

  <div class="col-md-3">
    right column
  </div>
</div>
